@charset "utf-8";
/* CSS Document */


/*====================================

====================================*/

.space{
	height:50px;
	clear:both;
}

/*====================================
				INDEX PAGE
=====================================*/
.donate_block{
	
	margin:0 15px;
	padding:0;
}

.donate_list{
	margin:10px 0px;
	font-size:15px;
	
	
}

.donate_button{
	background:#921701; 
	padding:2px 5px;
	margin:10px 5px;
	border-radius:5px
}

.icc_button{
	color:#777777;
	font-weight:bold !important;
}

.icc_button:hover{
	color:#921701 !important;
	text-decoration:underline;
	
	
}


.donate_button:hover{
	background:#A61A01; 
	color:#FFF;
	text-decoration:none
	
}
.red_link{
	color:#921701;
	
}

.red_link:hover{
	color:#921701;
	text-decoration:underline;
	
	
}

.busi_cat{
	
	max-height:900px !important;
	overflow-x: none;
	overflow-y: scroll;
	background:#FFF !important;
	
}

.reg_block  h6 > a{
	
	color:#921701;
	text-decoration:underline !important;
	font-weight:bold !important;
	
}

.reg_block  h6 > a:hover{
	
	color:#B00C0C;
	text-decoration:underline !important;
	font-weight:bold !important;
	
}

/*---SCROLL BAR STYLE---*/
#ex3::-webkit-scrollbar{
width:16px;
} 

#ex3::-webkit-scrollbar-thumb{
background-color:#B03C3F;
border-radius:5px;
}
#ex3::-webkit-scrollbar-thumb:hover{
background-color:#BF4649;
border:1px solid #333333;
}
#ex3::-webkit-scrollbar-thumb:active{
background-color:#A6393D;
border:1px solid #333333;
} 

#ex3::-webkit-scrollbar-track{

} 

.busi_cat_list, .busi_cat_list li{
	margin:0;
	padding:0;
}

.busi_cat_list li a{
	margin:5px 0px !important; 
	padding:0 10px !important;
	color:#777777 !important;
	font-size: 1.1em;
	font-weight:400
}

.busi_cat_list li a:hover{
	color:#921701 !important;
}

.sevathon{
		border:#fff solid 5px;
		-webkit-box-shadow:0 0 5px rgba(0,0,0,0.2);
		-moz-box-shadow:0 0 5px rgba(0,0,0,0.2);
		-o-box-shadow:0 0 5px rgba(0,0,0,0.2);
		box-shadow:0 0 5px rgba(0,0,0,0.2);
		
}

.high_light{
	color:#F00;
}

/*========================================
		BUSINESS CATEGORY
=========================================*/

.bus_cat_title{
	color:#000 !important;
	border:none !important;
	font-size:16px;
	font-weight:bold !important;
	padding:0px !important;
	margin-bottom:5px !important;
}


.company_details{ 

	margin-bottom:35px !important
		
}

.company_details > p{
	font-size:13px !important;
	margin:5px 0 !important;
	padding:0px !important;
	line-height:15px !important;
}

.address{
	font-size:13px !important;
	font-weight:bold !important;
}

.address a{
	font-size:13px !important;
	font-weight:bold !important;
	color:#921701 !important
}
.areas_served > p, .article_text{
	font-size:14px !important;
	margin:5px 0 !important;
	padding:0px !important;
	line-height:20px !important;
	
}

.title_link{
	font-size:20px !important;
	font-weight:bold !important;
	color:#921701 !important
	
}

.phone_no{
	color:#000;
	font-size:16px !important;
	font-weight:bold !important;
	
}

.page_article{
	display:block;
	color:#FFF !important;
	padding:4px  5px;
	background:#921701;
	font-size:13px
}
.page_conent{
	font-size:14px !important;
	margin:5px 0 !important;
	padding:0px !important;
	line-height:25px !important;
	text-align:justify
	
}



.side_heading{
	display:block;
	color:#FFF !important;
	padding:4px  5px !important;
	background:#921701;
	border-radius:5px;
	font-weight:bold
}


.report_rel_imag{
	max-width:100%;
	min-height:auto;
}


